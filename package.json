{
  "name": "sveltekit-tooling",
  "version": "0.0.1",
  "scripts": {
    "dev": "svelte-kit dev --port 3000",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "format": "prettier --write --plugin-search-dir=. .",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:css": "stylelint \"src/**/*.{css,svelte}\"",
    "prettier:check": "prettier --check --plugin-search-dir=. .",
    "svelte:check": "svelte-check --fail-on-warnings"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.4",
    "@fontsource/hind": "^4.5.6",
    "@fontsource/montserrat": "^4.5.7",
    "@sveltejs/kit": "next",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "husky": "^7.0.4",
    "postcss-html": "^1.4.1",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "stylelint": "^14.8.1",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-standard": "^25.0.0",
    "svelte": "^3.47.0",
    "svelte-check": "^2.7.0"
  },
  "type": "module"
}
