{
  "name": "sveltekit-tooling",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "description": "SvelteKit tooling: we look at 7 tools you can add to streamline your Svelte continuous integration (CI) and development processes.",
  "scripts": {
    "dev": "svelte-kit dev --port 3000",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "format": "prettier --write --plugin-search-dir=. .",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:css": "stylelint \"src/**/*.{css,svelte}\"",
    "prettier:check": "prettier --check --plugin-search-dir=. .",
    "svelte:check": "svelte-check --fail-on-warnings"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@fontsource/hind": "^4.5.8",
    "@fontsource/montserrat": "^4.5.11",
    "@sveltejs/kit": "next",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.1",
    "postcss-html": "^1.4.1",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "stylelint": "^14.9.1",
    "stylelint-config-recommended": "^8.0.0",
    "stylelint-config-standard": "^26.0.0",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.2"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/rodneylab/sveltekit-tooling"
  },
  "bugs": {
    "url": "https://github.com/rodneylab/sveltekit-tooling/issues"
  }
}
