{
  "name": "sveltekit-tooling",
  "version": "0.0.1",
  "scripts": {
    "dev": "svelte-kit dev --port 3030",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "format": "prettier --write --plugin-search-dir=. .",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:css": "stylelint \"src/**/*.{css,svelte}\"",
    "prettier:check": "prettier --check --plugin-search-dir=. .",
    "svelte:check": "svelte-check --fail-on-warnings"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^16.0.0",
    "@fontsource/hind": "^4.5.1",
    "@fontsource/montserrat": "^4.5.3",
    "@sveltejs/kit": "next",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.4.0",
    "husky": "^7.0.4",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.6.0",
    "stylelint": "^14.3.0",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-standard": "^24.0.0",
    "svelte": "^3.46.3",
    "svelte-check": "^2.4.1"
  },
  "type": "module"
}
